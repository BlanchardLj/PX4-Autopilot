menu "Lights"
    menuconfig COMMON_LIGHT
        bool "Common Light's"
        default y
        select DRIVERS_LIGHTS_RGBLED
        select DRIVERS_LIGHTS_RGBLED_NCP5623C
        select DRIVERS_LIGHTS_RGBLED_WS2812
        ---help---
            Enable default set of light drivers
    rsource "*/Kconfig"
endmenu
